{
  "manifest_version": 2,

  "name": "booksfordc",
  "description": "See if books, ebooks, and audiobooks are available at the DC Public Library while browsing Amazon, Goodreads, or Barnes & Noble.",
  "version": "1.1.3",
  
  "author": "Emanuel Feld",
  "homepage_url": "http://booksfordc.org",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": { "16": "assets/icon16.png",
             "48": "assets/icon48.png",
            "128": "assets/icon128.png" },

  "web_accessible_resources": [
    "css/booksfordc.css",
    "scripts/options.js",
    "scripts/common.js",
    "scripts/amazon.js",
    "scripts/bn.js",
    "scripts/goodreads.js",
    "assets/ajax-loader.gif",
    "assets/icon16white.png",
    "options.html"
  ],
  

  "content_scripts": [
      {
          "css": ["css/booksfordc.css"],
          "js": [
              "scripts/jquery.min.js",
              "scripts/common.js",
              "scripts/amazon.js",
              "scripts/bn.js",
              "scripts/goodreads.js"
          ],
          "matches": [
              "http://*.amazon.com/*",
              "https://*.amazon.com/*",
              "http://*.barnesandnoble.com/w/*",
              "https://*.barnesandnoble.com/w/*",
              "http://*.goodreads.com/book/show/*",
              "https://*.goodreads.com/book/show/*"
          ],
          "run_at": "document_end"
      }
  ],
      "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },

  "permissions": [
              "http://*.amazon.com/*",
              "https://*.amazon.com/*",
              "http://*.barnesandnoble.com/*",
              "https://*.barnesandnoble.com/*",
              "https://*.dclibrary.org/*",
              "http://*.dclibrary.org/*",
              "http://*.goodreads.com/*",
              "https://*.goodreads.com/*",
              "storage"
              ],
  "offline_enabled": false
}

